
@if (!IsEditable)
{
    <div class="alert alert-warning mb-4" style="display: flex; gap: var(--space-3); align-items: flex-start;">
        <span class="material-symbols-outlined" style="color: var(--warning-600);">lock</span>
        <div style="font-size: var(--text-sm);">
            <strong>Read-Only:</strong> This application has been submitted for processing. Guarantor data cannot be modified.
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Guarantors</h3>
        @if (IsEditable)
        {
            <button type="button" class="btn btn-primary btn-sm" @onclick="HandleAddGuarantor">
                <span class="material-symbols-outlined" style="font-size: 16px;">add</span>
                Add Guarantor
            </button>
        }
    </div>
    <div class="card-body" style="padding: 0;">
        @if (!Guarantors.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <span class="material-symbols-outlined">people</span>
                </div>
                <div class="empty-state-title">No guarantors registered</div>
                <div class="empty-state-text">Add guarantors to provide additional security for the loan.</div>
            </div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Relationship</th>
                        <th>Guarantee Amount</th>
                        <th>Status</th>
                        <th>Bureau</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var guarantor in Guarantors)
                    {
                        var currentGuarantor = guarantor;
                        <tr>
                            <td style="font-weight: 500;">@guarantor.Name</td>
                            <td>@guarantor.Relationship</td>
                            <td style="font-weight: 500;">₦@FormatAmount(guarantor.GuaranteeAmount)</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(guarantor.Status)">
                                    @guarantor.Status
                                </span>
                            </td>
                            <td>
                                @if (guarantor.HasBureauReport)
                                {
                                    <span class="badge badge-success">Checked</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Pending</span>
                                }
                            </td>
                            <td>
                                <div style="display: flex; gap: var(--space-1);">
                                    <button type="button" class="btn btn-ghost btn-sm" title="View Details" @onclick="() => OnViewGuarantor.InvokeAsync(currentGuarantor.Id)">
                                        <span class="material-symbols-outlined" style="font-size: 18px;">visibility</span>
                                    </button>
                                    @if (IsEditable)
                                    {
                                        @if (CanEditGuarantor(guarantor.Status))
                                        {
                                            <button type="button" class="btn btn-ghost btn-sm" title="Edit" @onclick="() => OnEditGuarantor.InvokeAsync(currentGuarantor.Id)">
                                                <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                            </button>
                                        }
                                        @if (CanDeleteGuarantor(guarantor.Status))
                                        {
                                            <button type="button" class="btn btn-ghost btn-sm" title="Delete" style="color: var(--danger-600);" @onclick="() => OnDeleteGuarantor.InvokeAsync(currentGuarantor.Id)">
                                                <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                            </button>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <div style="padding: var(--space-4); background: var(--gray-50); border-top: 1px solid var(--gray-100);">
                <div style="display: flex; justify-content: space-between;">
                    <span style="font-weight: 500;">Total Guarantee Coverage</span>
                    <span style="font-weight: 600; color: var(--primary-600);">
                        ₦@FormatAmount(Guarantors.Sum(g => g.GuaranteeAmount))
                    </span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public List<GuarantorInfo> Guarantors { get; set; } = [];
    [Parameter] public bool IsEditable { get; set; } = true;
    [Parameter] public EventCallback OnAddGuarantor { get; set; }
    [Parameter] public EventCallback<Guid> OnViewGuarantor { get; set; }
    [Parameter] public EventCallback<Guid> OnEditGuarantor { get; set; }
    [Parameter] public EventCallback<Guid> OnDeleteGuarantor { get; set; }

    private async Task HandleAddGuarantor() => await OnAddGuarantor.InvokeAsync();

    private static string GetStatusBadgeClass(string status) => status switch
    {
        "Active" or "Approved" => "badge-success",
        "Proposed" or "PendingVerification" or "CreditCheckPending" => "badge-warning",
        "Rejected" => "badge-danger",
        _ => "badge-gray"
    };

    private static string FormatAmount(decimal amount)
    {
        if (amount >= 1_000_000_000) return $"{amount / 1_000_000_000:0.##}B";
        if (amount >= 1_000_000) return $"{amount / 1_000_000:0.##}M";
        return $"{amount:N0}";
    }

    // Can edit if not yet approved/active/rejected
    private static bool CanEditGuarantor(string status) => status is "Proposed" or "PendingVerification" or "CreditCheckPending" or "CreditCheckCompleted";

    // Can delete if not yet approved/active/rejected - same as edit
    private static bool CanDeleteGuarantor(string status) => status is "Proposed" or "PendingVerification" or "CreditCheckPending" or "CreditCheckCompleted";
}
